@model PaymentsListsVM
@await Html.PartialAsync("_ValidationScriptsPartial")
@{
    Layout = null;
}

<div class="container">
    <div class="row m-15">
        <div class="col-12 text-center">
            <div class="card-header justify-content-between align-items-center">
                <h3 class="header-title">Pet</h3>
            </div>
        </div>
    </div>
    <div class="row justify-content-center text-center m-1">
        <div class="col-sm-6"> <b> Nome:</b>  @Model.Name  </div>
        <div class="col-sm-6"> <b> Chip:  </b> @Model.Identifier </div>

    </div>
    <div class="row justify-content-center text-center m-1">
        <div class="col-sm-6"> <b> Espécie:  </b> @Model.Specie </div>
        <div class="col-sm-6"> <b> Tutor:  </b> @Model.Guardian </div>

    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <div class="card-header justify-content-between align-items-center">
                <h3 class="header-title">Pagamentos</h3>
            </div>
        </div>
    </div>
    <div class="table-responsive-xl">

        <table class="table table-sm table-striped bg-white table-hover bootstrap-table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Parcelas</th>
                </tr>
            </thead>
            <tbody class="bg-white">
                @foreach (var item in Model.ListPayments)
                {
                    <tr class="bg-white">
                        <td class="text-nowrap">@item.Id</td>
                        <td class="text-nowrap">@item.Name</td>
                        <td class="text-nowrap ">
                            <b>R$ </b><span class="value-mask">@item.Value</span>
                        </td>
                        <td class="text-nowrap">@item.Installment</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <div class="card-header justify-content-between align-items-center">
                <h3 class="header-title">Histórico</h3>
            </div>
        </div>
    </div>
    <div class="table-responsive-xl">
        <table class="table table-sm table-striped bg-white table-hover bootstrap-table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Evento</th>
                    <th>Valor</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody class="bg-white">
                @foreach (var item in Model.ListPaymentsHistories)
                {
                    <tr class="bg-white">
                        <td class="text-nowrap">@item.PaymentId</td>
                        <td class="text-nowrap">@item.Event</td>
                        <td class="text-nowrap ">
                            <b>R$ </b><span class="value-mask">@item.Value</span>
                        </td>
                        <td class="text-nowrap">@item.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>