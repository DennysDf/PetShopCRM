@model PaymentsListsVM
@{
    
}

<div class="container">
    <div class="row m-15">
        <div class="col-12 text-center">
            <div class="card-header justify-content-between align-items-center">
                <h3 class="header-title">Pet</h3>
            </div>
        </div>
    </div>
    <div class="row justify-content-center text-center m-1">
        <div class="col-sm-6"> <b> Nome:</b>  @Model.Name  </div>
        <div class="col-sm-6"> <b> Chip:  </b> @Model.Identifier </div>

    </div>
    <div class="row justify-content-center text-center m-1">
        <div class="col-sm-6"> <b> Espécie:  </b> @Model.Specie </div>
        <div class="col-sm-6"> <b> Tutor:  </b> @Model.Guardian </div>

    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <div class="card-header justify-content-between align-items-center">
                <h3 class="header-title">Pagamentos</h3>
            </div>
        </div>
    </div>
    <div class="table-responsive-xl">

        <table class="table table-sm table-striped bg-white table-hover ">
            <thead class="thead-dark">
                <tr>                    
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Parcelas</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="bg-white">
                @foreach (var item in Model.ListPayments)
                {
                    <tr class="bg-white">                        
                        <td class="text-nowrap">
                            <a target="_blank" data-toggle="tooltip" data-placement="left" title="Benefícios do plano" href="@Url.Action("Benefits","HealthPlans", new{ Id = item.Id })">
                                @item.Name
                                @if (item.IsSuccess && item.IsActive) 
                                {
                                    <small>(Ativo)</small>
                                }else{
                                    <small class="text-danger">(cancelado)</small>
                                }
                            </a>
                        </td>
                        <td class="text-nowrap ">
                            <b>R$ </b><span class="value-mask">@item.Value</span>
                        </td>
                        <td class="text-nowrap">@item.Installment</td>
                        <td class="text-nowrap text-right">
                            <a href="@Url.Action("Monitoring", "Payment", new { paymentId = item.Id })" target="_blank" data-toggle="tooltip" title="Histórico" data-placement="left">
                                <i class="text-dark fa-solid fa-table-columns"></i>
                            </a>
                            @if (item.IsSuccess && item.IsActive)
                            {
                                <a class="mr-2 deletar" href="#" data-toggle="tooltip" data-placement="left" title="Cancelar Plano" data-id="@item.Id">
                                    <i class="fa fa-times text-danger"> </i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" style="padding-top:120px" role="dialog" id="delete" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"><i class="fa fa-exclamation-triangle " style="color:yellow"></i>  ATENÇÃO <i style="color:yellow" class="fa fa-exclamation-triangle"></i></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span class="font-weight-bold font-18">
                    Tem certeza que deseja cancelar sua assinatura do plano de saúde?
                    <input type="hidden" id="del-evento" />
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="fa fa-times-circle"></i>  Fechar</button>
                <button type="button" id="confirm-del" class="btn btn-success"><i class="fa fa-check-circle"></i> Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">

        var $table = $('#table')


        $(".deletar").click(function () {            
            var id = $(this).data("id")
            $("#del-evento").val(id)
            $("#delete").modal("show")
        })

        $("#confirm-del").click(function () {
            window.location.href = "@Url.Action("Delete","Payment")?id=" + $("#del-evento").val()+ "&route=Guardian";
        });

        // maskInit();
    </script>
}