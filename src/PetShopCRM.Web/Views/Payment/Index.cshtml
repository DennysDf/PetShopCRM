@model ICollection<PaymentVM>
@{
    ViewData["Title"] = "Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-3 ">
    <div class="col-12 text-center">
        <button data-id="0" id="modal-open" class="btn btn-success">
            <i class="fa fa-plus-circle"></i>
            <b>Incluir Pagamento</b>
        </button>
    </div>
</div>

<div class="table-responsive-xl">
    <table id="table-teste" class="table table-sm table-striped bootstrap-table bg-white table-hover" data-toggle="table" data-search="true" data-pagination="true" data-show-export="true" data-page-list="[10  25  50  100  all]">
        <thead class="thead-dark">
            <tr>
                <th data-field="id" width="15">#</th>
                <th>Id Externo</th>
                <th>Chip - Pet - Tutor</th>
                <th>Plano de saúde</th>
                <th>Parcela Atual</th>
                <th>Últ. Pagamento</th>
                <th>Criado com:</th>
                <th>Situação</th>
                <th width="15" class="text-center" data-field="operate" data-events="operateEvents"></th>
            </tr>
        </thead>
        <tbody class="bg-white">
            @foreach (var item in Model)
            {
                <tr class="bg-white">
                    <td>@item.Id</td>
                    <td class="text-nowrap @(item.IsSuccess ? "" : "text-danger")">
                        @if (string.IsNullOrEmpty(item.ExternalIdUrl))
                        {
                            @item.ExternalId
                        }
                        else
                        {
                            <a href="@item.ExternalIdUrl" target="_blank" data-toggle="tooltip" title="Acessar assinatura no Pagar.Me" data-placement="left">
                                @item.ExternalId
                            </a>
                        }
                    </td>
                    <td class="text-nowrap">@item.Pet</td>
                    <td class="text-nowrap">@item.HealhPlan</td>
                    <td class="text-nowrap">@item.Installment</td>
                    <td class="text-nowrap">@(item.LastPayment?.ToString(System.Globalization.CultureInfo.GetCultureInfo("pt-BR")) ?? "-")</td>
                    <td class="text-nowrap @(item.IsSuccess ? "" : "text-danger")">@(item.IsSuccess ? "Sucesso" : "Erro")</td>
                    <td class="text-nowrap">@(item.IsActive ? "Ativo" : "Cancelado")</td>
                    <td class="text-nowrap text-right" width="15">
                        <a href="@Url.Action("Monitoring", "Payment", new { paymentId = item.Id })" target="_blank" data-toggle="tooltip" title="Monitorar" data-placement="left">
                            <i class="text-dark fa-solid fa-table-columns"></i>
                        </a>

                        @if(item.IsSuccess && item.IsActive)
                        {
                            <a class="mr-2 deletar" href="#" data-toggle="tooltip" data-placement="left" title="Cancelar" data-id="@item.Id">
                                <i class="fa fa-times text-danger"> </i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<div class="modal fade" role="dialog" data-bs-backdrop="static" id="modal" aria-hidden="true" >
    <div class="modal-dialog" role="document" style="max-width:1000px!important">
        <div class="modal-content">
            <form asp-action="Index" method="post">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title title">Cadastrar Material</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="fa fa-times-circle"></i>  Fechar</button>
                    <button type="submit" class="btn btn-success"><i class="fa fa-check-circle"></i> Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal" style="padding-top:120px" role="dialog" id="delete" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"><i class="fa fa-exclamation-triangle " style="color:yellow"></i>  ATENÇÃO <i style="color:yellow" class="fa fa-exclamation-triangle"></i></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span class="font-weight-bold font-18">
                    Tem certeza que deseja cancelar esse pagamento?
                    <input type="hidden" id="del-evento" />
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="fa fa-times-circle"></i>  Fechar</button>
                <button type="button" id="confirm-del" class="btn btn-success"><i class="fa fa-check-circle"></i> Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>       
        $("#modal-open, .edit").click(function () {
            var id = $(this).data("id");
            Ajax(id)
        })

        function Ajax(id) {
            $.post('@Url.Action("Ajax")', { "id": id }, function (response) {
                $("#modal-body").html(response);
                maskInit();
                changeCep()
                if (id != 0) {
                    $(".title").text("Editar Pet")
                } else {
                    $(".title").text("Cadastrar Pagamento")
                }
                $("#modal").modal("show");
            })
        }

        $("#confirm-del").click(function () {
            window.location.href = "@Url.Action("Delete")?id=" + $("#del-evento").val();
        });

        var $table = $('#table')
        window.operateEvents = {
            'click .edit': function (e, value, row, index) {
                var id = [row.id]
                Ajax(id)
            },
            'click .deletar': function (e, value, row, index) {
                var id = [row.id]
                $("#del-evento").val(id)
                $("#delete").modal("show")
            }
        }

        function changeCep() {
            $("#BillingAddress_ZipCode").keyup(function () {
                if (($(this).val().length) == 9) {
                    $.getJSON('@Url.Action("GetAddressByCEP", "Guardian")', { "CEP": $(this).val() }, function (response) {
                        console.log(response)
                        $("#BillingAddress_City").val(response.city)
                        $("#BillingAddress_State").val(response.state)
                        $("#BillingAddress_Address").val(response.street)
                        $("#BillingAddress_Country").val("BR")
                    })
                } else {
                    $("#BillingAddress_City").val("")
                    $("#BillingAddress_State").val("")
                    $("#BillingAddress_Address").val("")
                    $("#BillingAddress_Country").val("")
                }
            })
        }
    </script>
}